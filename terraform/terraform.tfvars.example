# Terraform Variables - Copy to terraform.tfvars and fill in your values
# DO NOT commit terraform.tfvars to git!

# AWS Configuration
aws_region = "us-east-1"
instance_type = "g4dn.xlarge"

# Security Configuration (SENSITIVE - DO NOT COMMIT)
api_token = "your-secure-random-token-here"
ssh_key_name = "your-aws-keypair-name"
allowed_ssh_cidr = "YOUR.IP.ADDRESS.HERE/32"

# Example values:
# api_token = "abc123def456ghi789jkl012mno345pqr678stu901vwx234"
# ssh_key_name = "my-aws-key"
# allowed_ssh_cidr = "203.0.113.1/32"